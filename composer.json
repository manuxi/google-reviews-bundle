{
    "name": "manuxi/google-reviews-bundle",
    "description": "Bundle to get Google reviews easily",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "manuxi",
            "email": "manu@bytefresser.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/cache": "^6.4 || ^7.0",
        "symfony/serializer": "^6.4 || ^7.0",
        "symfony/yaml": "^6.4 || ^7.0",
        "symfony/framework-bundle": "^6.4 || ^7.0",
        "symfony/twig-bundle": "^6.4 || ^7.0",
        "symfony/monolog-bundle": "^3.10",
        "symfony/property-access": "^6.4 || ^7.0",
        "psr/cache": "^3.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "matthiasnoback/symfony-dependency-injection-test": "^6.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^11.0",
        "symfony/debug-bundle": "^6.4 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Manuxi\\GoogleReviewsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Manuxi\\GoogleReviewsBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html var/coverage",
        "phpstan": "phpstan analyse src --level=6",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    }
}